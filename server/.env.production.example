NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Base URLs (update to your deployed domains)
API_BASE_URL=https://api.your-domain.com
CLIENT_URL=https://your-domain.com

# PayPal credentials (set PAYPAL_MODE=live for production)
PAYPAL_CLIENT_ID=your-live-client-id
PAYPAL_CLIENT_SECRET=your-live-client-secret
PAYPAL_MODE=live
PAYPAL_RETURN_URL=https://api.your-domain.com/api/check-payment-paypal
PAYPAL_CANCEL_URL=https://your-domain.com/cart?payment=cancelled

# VNPay configuration
VNP_TMN_CODE=your-vnp-tmn-code
VNP_HASH_SECRET=your-vnp-hash-secret
VNP_HOST=https://pay.vnpay.vn
VNP_RETURN_URL=https://api.your-domain.com/api/check-payment-vnpay
VNP_TEST_MODE=false

# Database connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your-database
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Security keys
JWT_SECRET=generate-a-secret
SECRET_CRYPTO=generate-a-secret
